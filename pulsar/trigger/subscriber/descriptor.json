{
	"name": "pulsar-subscriber",
	"type": "flogo:trigger",
	"version": "1.0.0",
	"author": "TIBCO Software Inc.",
	"title": "Apache Pulsar Subscriber",
	"description": "A pulsar trigger which reads messages from apache pulsar queue",
	"settings": [
		{
			"name": "connection",
			"type": "connection",
			"required": true
		}
	],
	"output": [
		{
			"name": "payload",
			"type": "any"
		},
		{
			"name": "properties",
			"type": "params"
		},
		{
			"name": "topic",
			"type": "string"
		}

	],
	"handler": {
		"settings": [
			{
				"name": "topic",
				"type": "string",
				"required": true
			},
			{
				"name": "subscriptionName",
				"type": "string",
				"required": true,
				"value":""
			},
			{
				"name": "subscriptionType",
				"type": "string",
				"required": true,
				"allowed":["Exclusive","Shared","Failover","KeyShared"],
				"value":"Shared"
			},
			{
				"name": "initialPosition",
				"type": "string",
				"required": true,
				"allowed":["Latest","Earliest"],
				"value":"Latest"
			},
			{
				"name": "dlqTopic",
				"type": "string",
				"required": false,
				"value":""
			},
			{
				"name": "dlqMaxDeliveries",
				"type": "integer",
				"required": false,
				"value":3
			}

		]
	}
}
